type Cliente {
    id:ID
    nome:String
    email: String

    compras:[Compra]
}

input ClienteInput {
    id:ID
    nome:String
    email: String
}

extend type Query {
    cliente(id:ID):Cliente
    clientes:[Cliente]
}

extend type Mutation {
    salvarCliente(cliente:ClienteInput):Cliente
    deletarCliente(id:ID):Boolean
}